      "POST-BUILD",
      "OPERATIONS"
    ],
    "supportedStandards": [
      "CYCLONEDX"
    ],
    "cycloneDxVersion": [
      "CYCLONEDX_V1.4"
    ],
    "supportedLanguages": [
      "C/C++",
      "GO",
      "JAVA",
      "JAVASCRIPT/TYPESCRIPT",
