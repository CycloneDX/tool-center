    ],
    "availability": [
      "OPEN_SOURCE",
      "OSI_APPROVED"
    ],
    "functions": [
      "AUTHOR",
      "PACKAGE_MANAGER_INTEGRATION"
    ],
    "packaging": [
      "COMMAND_LINE_UTILITY",
      "LIBRARY"
    ],
    "library": [
      "NODE.JS"
    ],
    "platform": [
      "LINUX",
      "MAC",
      "WINDOWS"
    ],
    "supportedLanguages": [
      "JAVASCRIPT/TYPESCRIPT",
      "NODE.JS"
    ]
